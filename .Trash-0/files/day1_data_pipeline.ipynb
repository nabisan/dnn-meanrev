# Day 1: Data Pipeline & Feature Foundation
# Following Dixon et al. 2017 methodology

import sys
sys.path.append('/app')

from src.data_loader import MultiAssetDataLoader
from src.features.feature_engineer import DixonFeatureEngineer
from src.features.target_generator import DixonTargetGenerator
import pandas as pd

# ===== CONFIGURATION =====
# Choose your instruments (START WITH 5 FOR TESTING)

# Option A: Crypto (easier to get 5-min data)
SYMBOLS_CRYPTO = [
    'BTC/USDT',
    'ETH/USDT',
    'SOL/USDT',
    'BNB/USDT',
    'AVAX/USDT'
]

# Option B: Traditional (may need proper data provider)
SYMBOLS_TRADITIONAL = [
    'ES=F',  # E-mini S&P 500
    'NQ=F',  # E-mini Nasdaq
    'GC=F',  # Gold
    'CL=F',  # Crude Oil
    'ZN=F'   # 10-Year Treasury
]

# Choose one
SYMBOLS = SYMBOLS_CRYPTO  # <-- CHANGE THIS
DATA_SOURCE = 'crypto'    # <-- CHANGE THIS

# Date range (Dixon uses ~15 years, we'll start with 6 months)
START_DATE = '2024-06-01'
END_DATE = '2024-12-19'

# ===== STEP 1: DOWNLOAD DATA =====
print("=" * 60)
print("STEP 1: Downloading Data")
print("=" * 60)

loader = MultiAssetDataLoader(
    symbols=SYMBOLS,
    start_date=START_DATE,
    end_date=END_DATE,
    data_source=DATA_SOURCE
)

data_dict = loader.load_data()
loader.save_data()

# ===== STEP 2: CREATE FEATURES =====
print("\n" + "=" * 60)
print("STEP 2: Feature Engineering")
print("=" * 60)

engineer = DixonFeatureEngineer(data_dict, normalize=True)
features = engineer.create_all_features()
engineer.save_features()

# ===== STEP 3: CREATE TARGETS =====
print("\n" + "=" * 60)
print("STEP 3: Target Generation")
print("=" * 60)

target_gen = DixonTargetGenerator(data_dict, threshold=1e-3)
targets = target_gen.create_targets()
target_gen.save_targets()

# ===== STEP 4: VERIFY DATA =====
print("\n" + "=" * 60)
print("DAY 1 SUMMARY")
print("=" * 60)
print(f"Features shape: {features.shape}")
print(f"Targets shape: {targets.shape}")
print(f"\nFeature columns (first 10):")
print(features.columns[:10].tolist())
